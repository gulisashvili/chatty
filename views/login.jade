extends layout

block content
  #background
  #main-wrapper
    .col-xs-12.col-sm-10.col-sm-offset-1.col-md-8.col-md-offset-2.form-wrapper
      h1.logo
        span.glyphicon.glyphicon-fire
      h1 Chatty
      h3 Sign in to your acount
      form.col-xs-12.col-md-8.col-md-offset-2(action="/login", method="POST")
        .form-group.animated.swing
          input(type="text", class="form-control", name="username", id="exampleInputEmail1", placeholder="username")
        .form-group.animated.swing
          input(type="password", class="form-control", name="password", id="exampleInputPassword1", placeholder="password")
        .form-group.animated.swing
          button(type="submit", class="btn btn-info btn-block") Sign In
        .form-group.animated.swing
          a.user-anchor(href="/register") new user?



